<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            style="@style/Widget.Customized.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bolumcard"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <TextView
                    android:id="@+id/msm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bölümün"
                    android:textSize="@dimen/_18sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"/>



                <com.llollox.androidprojects.compoundbuttongroup.CompoundButtonGroup
                    android:id="@+id/radio_bolum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:compoundType="radio"
                    app:entries="@array/bolum_array"
                    app:labelOrder="after"
                    app:numCols="2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            style="@style/Widget.Customized.CardView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hedefin"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="20sp" />
                <Button
                    android:background="@drawable/button_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonSwitch"
                    android:layout_alignParentRight="true"
                    android:text="Sıralama"/>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hedef_uni"
            android:visibility="visible"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hedef_sayilar"
            android:inputType="number"
            android:visibility="gone"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Customized.CardView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="OBP"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="4dp"
                    android:textSize="20sp" />
                <EditText
                    android:maxLength="6"
                    android:id="@+id/obpedit"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:inputType="numberDecimal"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/Widget.Customized.CardView">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="14dp"
                    android:text="Sınıfın"
                    />

                <com.llollox.androidprojects.compoundbuttongroup.CompoundButtonGroup
                    android:id="@+id/radio_sinif"
                    android:layout_width="215dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent"
                    app:compoundType="radio"
                    app:entries="@array/sinif_array"
                    app:labelOrder="after"
                    app:numCols="2" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/mezun_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Widget.Customized.CardView">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Daha önce \ntercih yaptın mı?"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp"/>
                    <com.llollox.androidprojects.compoundbuttongroup.CompoundButtonGroup
                        android:id="@+id/mezun_soru"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:compoundType="radio"
                        app:entries="@array/evet_hayir"
                        app:labelOrder="after"
                        app:numCols="2" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <Button
            android:background="@drawable/button_right"
            android:id="@+id/devamButonu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:text="Devam"
            />

    </LinearLayout>

</ScrollView>