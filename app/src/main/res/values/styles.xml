<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark"></style>

    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
        <item name="android:paddingRight">@dimen/_24sdp</item>
        <item name="android:paddingLeft">@dimen/_24sdp</item>
        <item name="android:textSize">@dimen/_36sdp</item>
    </style>

    <style name="TextAppearance.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="Widget.Customized.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardView</item>
        <item name="cardCornerRadius">@dimen/_4sdp</item>
        <item name="android:layout_margin">@dimen/_4sdp</item>
        <item name="android:textSize">@dimen/_4sdp</item>
        <item name="android:editTextColor">@color/colorCardViewText</item>
        <item name="android:textColor">@color/colorCardViewText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="cardElevation">@dimen/_4sdp</item>
    </style>
</resources>